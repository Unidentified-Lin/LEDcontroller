<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/dialog_s_edt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:lines="1"
        android:maxEms="15"
        android:maxLength="15"
        android:maxLines="1"
        android:minLines="1" />

    <View
        android:id="@+id/dialog_s_view_color"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/dialog_s_edt_name"
        android:layout_alignRight="@+id/dialog_s_edt_name"
        android:layout_below="@+id/dialog_s_edt_name"
        android:layout_marginTop="20dp"
        android:background="#000000" />

    <TextView
        android:id="@+id/dialog_s_txt_rgb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_s_view_color"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/dialog_s_txt_rgb"
        android:layout_marginTop="30dp" >

        <Button
            android:id="@+id/dialog_s_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel" />

        <Button
            android:id="@+id/dialog_s_btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save" />

    </LinearLayout>

</RelativeLayout>
